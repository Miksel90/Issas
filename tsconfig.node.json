{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "exclude": ["node_modules"]
}
